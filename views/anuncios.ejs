<% include _header %>

<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header"><a href="/" class="navbar-brand">Nodeapi</a></div>
    <% getLocales().forEach( locale => { %>
      <a href="/change-locale/<%= locale %>"><%= locale %></a>&nbsp;
    <% }) %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= __("List of adverts") %></h1>
      <p class="lead"><%= __("Listing") %>: <%= anuncios.length %> <%= __("of") %> <%= total %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead><tr>
          <th><%= __("Name") %></th>
          <th><%= __("Selling") %></th>
          <th style="text-align: right"><%= __("Price") %></th>
          <th><%= __("Photo") %></th>
          <th><%= __("Tags") %></th>
          <th>#</th>
        </tr></thead>
        <tbody>
<% anuncios.forEach(anuncio => { %>
          <tr>
            <td><%= anuncio.nombre %></td>
            <td><%= anuncio.venta ? __("Yes") : __("No") %></td>
            <td style="text-align: right"><%= anuncio.precio / 100 %>â‚¬</td>
            <td><img src="<%= anuncio.foto %>"></td>
            <td><%= anuncio.tags %></td>
            <td><%= anuncio._id %></td>
          </tr>
<% }) %>
        </tbody>
      </table>

      <p><%= __("Ejemplos") %>:</p>

      <ul>
        <li><a href="?"><%= __("All") %> (max. 1000)</a></li>
        <li><a href="?start=2&limit=2"><%= __("Pagination") %></a></li>
        <li><a href="?sort=precio"><%= __("Ascendant") %></a></li>
        <li><a href="?sort=-precio"><%= __("Descendant") %></a></li>
        <li><a href="?tag=mobile"><%= __("Mobile") %></a></li>
      </ul>

    </div>
  </div>

  <a href="/"><%= __("Go back to home") %></a>

</div>
<% include _footer %>
